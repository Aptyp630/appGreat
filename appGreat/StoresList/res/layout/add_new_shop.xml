<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="top"
                  android:paddingTop="20dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/putNameShop"
                android:background="#ffffcc"
                android:textColor="#ffff7000"
                android:hint="@string/shopTitle"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/putDescription"
                android:background="#ffffcc"
                android:textColor="#ffff7000"
                android:hint="@string/shopDescription"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionToMap"
                android:text="@string/descriptionToMap"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#ffff7000"
                android:textSize="20sp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/latitude"
                    android:background="#ffffcc"
                    android:textColor="#ffff7000"
                    android:hint="@string/latitude"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:editable="false"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/longitude"
                    android:background="#ffffcc"
                    android:textColor="#ffff7000"
                    android:hint="@string/longitude"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:editable="false"/>

                </LinearLayout>

        <Button android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/pickMap"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="#ffff7000"
                android:id="@+id/pickMap"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/createShop"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#ffff7000"
                    android:id="@+id/createShop"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/updateShop"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#ffff7000"
                    android:id="@+id/updateShop"
                    android:padding="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"/>

            </LinearLayout>
    </LinearLayout>
</ScrollView>
